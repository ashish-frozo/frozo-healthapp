# Backend Environment Variables for Railway
# Copy these to your Railway Backend service

DATABASE_URL=<auto-linked from Railway PostgreSQL>
JWT_SECRET=<secure-random-secret-at-least-32-characters>
GEMINI_API_KEY=<your-google-ai-api-key>
ALLOWED_ORIGINS=https://kincare.frozo.ai
NODE_ENV=production
SENTRY_DSN=<optional>

# Firebase (Base64 encoded service account JSON)
FIREBASE_SERVICE_ACCOUNT=<base64-encoded-service-account>

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=<your-twilio-account-sid>
TWILIO_AUTH_TOKEN=<your-twilio-auth-token>
TWILIO_WHATSAPP_NUMBER=<your-whatsapp-number>

# Dodo Payments Configuration
DODO_PAYMENTS_API_KEY=<your-dodo-payments-api-key>
DODO_PAYMENTS_ENVIRONMENT=live_mode
DODO_WEBHOOK_SECRET=<your-dodo-webhook-secret>

# Product IDs (Create these in Dodo Dashboard)
DODO_PRODUCT_TRY_IT_OUT=<product-id-for-try-it-out>
DODO_PRODUCT_MONTHLY_CARE=<product-id-for-monthly-care>
DODO_PRODUCT_YEARLY_CARE=<product-id-for-yearly-care>
DODO_PRODUCT_CARE_PLUS=<product-id-for-care-plus-subscription>

# Frontend URL for success redirect
FRONTEND_URL=https://kincare.frozo.ai
