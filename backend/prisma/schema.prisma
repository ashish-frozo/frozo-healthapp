generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String            @id @default(cuid())
  phoneNumber          String            @unique
  preferredLanguage    String            @default("hinglish") // english, hindi, hinglish
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  profiles             Profile[]
  householdMemberships HouseholdMember[]
  createdHouseholds    Household[]       @relation("HouseholdCreator")
  sentInvites          HouseholdInvite[] @relation("InviteSender")
  wallet               UserWallet?
  deviceTokens         DeviceToken[]
}

model Household {
  id          String            @id @default(cuid())
  name        String
  inviteCode  String            @unique @default(cuid())
  createdById String
  createdBy   User              @relation("HouseholdCreator", fields: [createdById], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  members     HouseholdMember[]
  profiles    Profile[]
  invites     HouseholdInvite[]
}

model HouseholdMember {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        String    @default("member") // admin, member, caregiver
  permissions Json      @default("{}")
  joinedAt    DateTime  @default(now())
  invitedById String?

  @@unique([householdId, userId])
}

model HouseholdInvite {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  phoneNumber String
  invitedById String
  invitedBy   User      @relation("InviteSender", fields: [invitedById], references: [id])
  status      String    @default("pending") // pending, accepted, expired
  expiresAt   DateTime
  createdAt   DateTime  @default(now())

  @@unique([householdId, phoneNumber])
}

model Profile {
  id               String           @id @default(cuid())
  userId           String
  user             User             @relation(fields: [userId], references: [id])
  householdId      String?
  household        Household?       @relation(fields: [householdId], references: [id])
  name             String
  relationship     String
  role             String           @default("dependent")
  dateOfBirth      DateTime
  avatarUrl        String?
  bloodType        String?
  allergies        String[]
  conditions       String[]
  medications      String[]
  emergencyContact Json?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  bpReadings       BPReading[]
  glucoseReadings  GlucoseReading[]
  documents        Document[]
  reminders        Reminder[]
  symptoms         Symptom[]
  notifications    Notification[]
  clinicLinks      ClinicLink[]
  emergencyAlerts  EmergencyAlert[]
  alertSettings    AlertSettings?
}

model BPReading {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  systolic  Int
  diastolic Int
  pulse     Int?
  status    String
  timestamp DateTime @default(now())
}

model GlucoseReading {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  value     Float
  context   String
  status    String
  timestamp DateTime @default(now())
}

model Document {
  id                        String   @id @default(cuid())
  profileId                 String
  profile                   Profile  @relation(fields: [profileId], references: [id])
  title                     String
  category                  String
  date                      DateTime
  fileUrl                   String?
  thumbnailUrl              String?
  tags                      String[]
  inVisitPack               Boolean  @default(false)
  classificationConfidence  Float?   // AI confidence score (0-1)
  manuallyOverridden        Boolean  @default(false) // User changed category
  createdAt                 DateTime @default(now())
}

model Reminder {
  id          String    @id @default(cuid())
  profileId   String
  profile     Profile   @relation(fields: [profileId], references: [id])
  title       String
  description String?
  time        String
  completed   Boolean   @default(false)
  completedAt DateTime?
}

model Symptom {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  name      String
  severity  String
  notes     String?
  timestamp DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  title     String
  message   String
  type      String
  priority  String
  isRead    Boolean  @default(false)
  timestamp DateTime @default(now())
  actionUrl String?
}

model ClinicLink {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  url       String   @unique
  expiresAt DateTime
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

// Emergency Alert - SOS and abnormal reading alerts
model EmergencyAlert {
  id         String    @id @default(cuid())
  profileId  String
  profile    Profile   @relation(fields: [profileId], references: [id])
  type       String    // 'sos', 'high_bp', 'low_bp', 'high_glucose', 'low_glucose'
  message    String
  latitude   Float?
  longitude  Float?
  resolved   Boolean   @default(false)
  resolvedBy String?
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())
}

// Alert Settings per profile for caregiver notifications
model AlertSettings {
  id                   String   @id @default(cuid())
  profileId            String   @unique
  profile              Profile  @relation(fields: [profileId], references: [id])
  notifyOnHighBP       Boolean  @default(true)
  notifyOnLowBP        Boolean  @default(true)
  notifyOnHighGlucose  Boolean  @default(true)
  notifyOnLowGlucose   Boolean  @default(true)
  bpHighSystolic       Int      @default(140)
  bpHighDiastolic      Int      @default(90)
  bpLowSystolic        Int      @default(90)
  bpLowDiastolic       Int      @default(60)
  glucoseHighThreshold Float    @default(180)
  glucoseLowThreshold  Float    @default(70)
  emergencyContacts    Json     @default("[]") // [{name, phone, relationship}]
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

// User Wallet for credits system
model UserWallet {
  id           String              @id @default(cuid())
  userId       String              @unique
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance      Int                 @default(10) // Starting credits for new users
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  transactions CreditTransaction[]
}

// Credit transactions for tracking purchases and usage
model CreditTransaction {
  id          String     @id @default(cuid())
  walletId    String
  wallet      UserWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  amount      Int        // Positive = credit, Negative = debit
  type        String     // 'purchase', 'usage', 'referral', 'bonus', 'signup'
  description String?
  referenceId String?    // paymentId, featureId, or referral code
  createdAt   DateTime   @default(now())
}

// Subscription model for Care+ unlimited plan
model Subscription {
  id             String    @id @default(cuid())
  userId         String    @unique
  subscriptionId String    @unique // Dodo subscription ID
  status         String    @default("active") // active, cancelled, expired, paused
  planId         String    // care_plus, etc.
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelledAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// Device Token for biometric authentication
model DeviceToken {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceId   String   // Unique device identifier
  token      String   @unique // Hashed token for security
  platform   String   // 'android' or 'ios'
  model      String?  // Device model
  osVersion  String?  // OS version
  lastUsed   DateTime @default(now())
  expiresAt  DateTime // 30 days from creation
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, deviceId])
  @@index([userId])
  @@index([token])
}

