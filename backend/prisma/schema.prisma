generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String            @id @default(cuid())
  phoneNumber          String            @unique
  preferredLanguage    String            @default("hinglish") // english, hindi, hinglish
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  profiles             Profile[]
  householdMemberships HouseholdMember[]
  createdHouseholds    Household[]       @relation("HouseholdCreator")
  sentInvites          HouseholdInvite[] @relation("InviteSender")
}

model Household {
  id          String            @id @default(cuid())
  name        String
  inviteCode  String            @unique @default(cuid())
  createdById String
  createdBy   User              @relation("HouseholdCreator", fields: [createdById], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  members     HouseholdMember[]
  profiles    Profile[]
  invites     HouseholdInvite[]
}

model HouseholdMember {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        String    @default("member") // admin, member, caregiver
  permissions Json      @default("{}")
  joinedAt    DateTime  @default(now())
  invitedById String?

  @@unique([householdId, userId])
}

model HouseholdInvite {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  phoneNumber String
  invitedById String
  invitedBy   User      @relation("InviteSender", fields: [invitedById], references: [id])
  status      String    @default("pending") // pending, accepted, expired
  expiresAt   DateTime
  createdAt   DateTime  @default(now())

  @@unique([householdId, phoneNumber])
}

model Profile {
  id               String           @id @default(cuid())
  userId           String
  user             User             @relation(fields: [userId], references: [id])
  householdId      String?
  household        Household?       @relation(fields: [householdId], references: [id])
  name             String
  relationship     String
  role             String           @default("dependent")
  dateOfBirth      DateTime
  avatarUrl        String?
  bloodType        String?
  allergies        String[]
  conditions       String[]
  medications      String[]
  emergencyContact Json?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  bpReadings       BPReading[]
  glucoseReadings  GlucoseReading[]
  documents        Document[]
  reminders        Reminder[]
  symptoms         Symptom[]
  notifications    Notification[]
  clinicLinks      ClinicLink[]
}

model BPReading {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  systolic  Int
  diastolic Int
  pulse     Int?
  status    String
  timestamp DateTime @default(now())
}

model GlucoseReading {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  value     Float
  context   String
  status    String
  timestamp DateTime @default(now())
}

model Document {
  id           String   @id @default(cuid())
  profileId    String
  profile      Profile  @relation(fields: [profileId], references: [id])
  title        String
  category     String
  date         DateTime
  fileUrl      String?
  thumbnailUrl String?
  tags         String[]
  inVisitPack  Boolean  @default(false)
  createdAt    DateTime @default(now())
}

model Reminder {
  id          String    @id @default(cuid())
  profileId   String
  profile     Profile   @relation(fields: [profileId], references: [id])
  title       String
  description String?
  time        String
  completed   Boolean   @default(false)
  completedAt DateTime?
}

model Symptom {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  name      String
  severity  String
  notes     String?
  timestamp DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  title     String
  message   String
  type      String
  priority  String
  isRead    Boolean  @default(false)
  timestamp DateTime @default(now())
  actionUrl String?
}

model ClinicLink {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  url       String   @unique
  expiresAt DateTime
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

